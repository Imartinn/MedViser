<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnTomar"
        android:src="@drawable/checked"
        android:background="#00000000"
        android:baselineAlignBottom="false"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/estado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblNombreMed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Detalles muestra"
        android:id="@+id/lblDetallesToma"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/lblDet"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/lblDet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/detalles"
        android:id="@+id/lblDet"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:layout_below="@+id/lblNombreMed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="12:00"
        android:id="@+id/lblHoraToma"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnTomar"
        android:layout_marginRight="20dp" />

</RelativeLayout>